	<Window.Styles>
		<Style Selector="TabItem:pointerover /template/ Border#PART_LayoutRoot">
			<Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}" />
		</Style>
		<Style Selector="TabItem:selected:pointerover /template/ Border#PART_LayoutRoot">
			<Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}" />
		</Style>
		<!-- 选中背景颜色 -->
		<Style Selector="TabItem:selected">
			<Setter Property="Background" Value="#EAEAEAEA" />
			<!--<Setter Property="FontWeight" Value="Bold"/>-->
		</Style>
		<!-- TabControl TabItem TabControl 中间加线 -->
		<Style Selector="Border.settingsContentBorder">
			<Setter Property="BorderThickness" Value="1,0,0,0" />
			<Setter Property="BorderBrush" Value="#EAEAEAEA" />
		</Style>

		<Style Selector="TabItem Border.settingsTabHeaderBorder">
			<Setter Property="Padding" Value="5,5,10,5" />
			<Setter Property="CornerRadius" Value="8" />
			<Setter Property="Margin" Value="0,0,10,0" />
			<Setter Property="Width" Value="80" />
		</Style>



